<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/messageFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/photoFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="visible"
                android:background="@drawable/photo"
                android:id="@+id/photo"/>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/receiverdots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:visibility="visible"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/dotreceiverbackground"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="1dp"
                android:background="@drawable/dotreceiverbackground"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_marginRight="20dp"
            android:paddingTop="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            android:background="@drawable/receivermessagebackground">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:scaleType="centerCrop"
                    android:background="#efefef"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/playicon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:background="@drawable/videomark"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/receivedownloadicon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/receivedownloadicon"/>
                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:visibility="visible"
                    android:text="Hello! Nice to meet you."
                    android:textColor="#fff"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginTop="10dp"
                android:text="4/20/2017-16:55"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:textColor="#c6ffffff"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/senderFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/writespace"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="60dp"
                    android:layout_gravity="right"
                    android:background="@drawable/chat_frame_white">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:scaleType="centerCrop"
                            android:background="#efefef"
                            android:visibility="gone"
                            />
                        <ImageView
                            android:id="@+id/playicon2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:visibility="gone"
                            android:background="@drawable/videomark"
                            android:layout_gravity="center"/>
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/senddownloadicon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:visibility="gone"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/senddownloadicon"/>
                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:visibility="visible"
                            android:text="Hello! Nice to meet you."
                            android:textColor="#000"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/datetime2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:text="4/20/2017-16:55"
                            android:textColor="#c6919191"/>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp">
                            <ImageView
                                android:id="@+id/writed_symb"
                                android:layout_width="15dp"
                                android:layout_height="12dp"
                                android:background="@drawable/ic_chat_read_gray"/>
                            <ImageView
                                android:id="@+id/read_symb"
                                android:layout_width="15dp"
                                android:layout_height="12dp"
                                android:layout_marginLeft="4dp"
                                android:background="@drawable/ic_chat_read_gray"/>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/senderdots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:visibility="gone"
                android:layout_gravity="right"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/chat_frame_white"/>
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="1dp"
                    android:background="@drawable/chat_frame_white"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>