<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/colorAccent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You find your inspiration by"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:padding="6dp"
                    android:gravity="center"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gray_round">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/inspiration"/>
                </FrameLayout>
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <RadioButton
                        android:id="@+id/first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Taking a walk in the woods"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Catching up with a good friend"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/third"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Visiting an art gallery"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/fourth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Doing yoga"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/fifth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Shopping at the mall"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/sixth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Learning a new language"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/seventh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Working out"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:layout_marginBottom="15dp"
                        android:textSize="14sp"/>
                </RadioGroup>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</FrameLayout>






























