<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorAccent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Describe Yourself"
            android:textSize="22sp"
            android:textStyle="bold"
            android:padding="6dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#fff"
            android:gravity="center"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/gray_round">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/qprofile"/>
        </FrameLayout>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <RadioButton
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Family oriented"
                android:gravity="center"
                android:background="@drawable/red_stroke_round"
                android:button="@android:color/transparent"
                android:drawableRight="@drawable/right_arrow_red"
                android:textColor="@color/colorAccent"
                android:padding="10dp"
                android:textSize="14sp"/>
            <RadioButton
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Environmentally conscious"
                android:gravity="center"
                android:background="@drawable/red_stroke_round"
                android:button="@android:color/transparent"
                android:drawableRight="@drawable/right_arrow_red"
                android:textColor="@color/colorAccent"
                android:padding="10dp"
                android:textSize="14sp"/>
            <RadioButton
                android:id="@+id/third"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Stylish"
                android:gravity="center"
                android:background="@drawable/red_stroke_round"
                android:button="@android:color/transparent"
                android:drawableRight="@drawable/right_arrow_red"
                android:textColor="@color/colorAccent"
                android:padding="10dp"
                android:textSize="14sp"/>
            <RadioButton
                android:id="@+id/fourth"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Adaptable"
                android:gravity="center"
                android:background="@drawable/red_stroke_round"
                android:button="@android:color/transparent"
                android:drawableRight="@drawable/right_arrow_red"
                android:textColor="@color/colorAccent"
                android:padding="10dp"
                android:textSize="14sp"/>
        </RadioGroup>
    </LinearLayout>
</FrameLayout>






























