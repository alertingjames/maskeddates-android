<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.date.maskeddates.main.UpdateSelfieActivity">
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99ffffff"/>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        style="@style/ToolBarWithNavigationBack"
        android:background="@color/colorAccent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Update your selfie"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="24sp"
            android:id="@+id/title" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rectangle_shadow"
        android:gravity="center"
        android:layout_gravity="center">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/photo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/photo"
                android:onClick="takePhoto"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/cameraButton"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:onClick="takePhoto"
                android:src="@drawable/camera_red"
                android:layout_gravity="right|bottom"/>
        </FrameLayout>
        <com.marozzi.roundbutton.RoundButton
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:onClick="updateSelfie"
            android:background="@drawable/red_radio_fill_round"
            android:text="Save"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            app:rb_animation_alpha="true"
            app:rb_animation_duration="500"
            app:rb_animation_progress_color="@color/colorAccent"
            app:rb_animation_progress_style="dots"
            app:rb_background_color="@color/colorAccent"
            app:rb_background_color_pressed="#098970"
            app:rb_corner_color="#fff"
            app:rb_corner_color_pressed="#098970"
            app:rb_corner_radius="50dp"
            app:rb_corner_width="1dp"
            app:rb_text_color="#fff"
            app:rb_text_color_pressed="@android:color/white" />
    </LinearLayout>

    <View
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#97000000">
    </View>

    <LinearLayout
        android:id="@+id/alertbox"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/questionnaire_round"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:padding="12dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/infoicon"/>
            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="Information"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/closeButton"
                android:onClick="closeAlert"
                android:src="@drawable/com_facebook_close"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your photo didn't meet our standards. Please upload a selfie that clearly shows your face.Make sure that the photo is well-lit and not blurry. Please don't include other people in your selfie."
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:padding="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/okay"
                android:layout_width="0px"
                android:layout_weight="1"
                android:visibility="visible"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:background="#fff"
                android:gravity="center"
                android:padding="5dp"
                android:onClick="takePhoto"
                android:text="Okay"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
