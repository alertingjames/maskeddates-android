<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/colorAccent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What are you looking for?"
                    android:textSize="20sp"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#fff"
                    android:gravity="center"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gray_round">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/relationship"/>
                </FrameLayout>
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <RadioButton
                        android:id="@+id/first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Friendship"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Long Term Relationship"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/third"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Intimate Relationship"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/fourth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Shared Interest"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/fifth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="No Strings Fling"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/sixth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Short Term Relationship"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/seventh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="True Love"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/eighth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Marriage"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                </RadioGroup>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</FrameLayout>






























