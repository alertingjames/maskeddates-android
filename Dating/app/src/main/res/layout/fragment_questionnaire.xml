<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".main.QuestionnaireActivity$PlaceholderFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/colorAccent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">
                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="0px"
                    android:layout_height="0px" />
                <TextView
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:minLines="3"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textColor="#fff"
                    android:fontFamily="sans-serif-condensed"
                    android:text="If you won the lottery tomorrow, what’s the first thing you’d buy?"
                    android:textSize="23sp"/>
                <EditText
                    android:id="@+id/answerInputBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:minLines="8"
                    android:imeOptions="actionNext"
                    android:gravity="start"
                    android:paddingTop="12dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingBottom="12dp"
                    android:hint="Write here ..."
                    android:background="@drawable/gray_round"
                    android:textSize="20sp"/>
                <com.marozzi.roundbutton.RoundButton
                    android:id="@+id/proceedButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:background="@drawable/circular_shadow"
                    android:text="Next"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    app:rb_animation_alpha="true"
                    app:rb_animation_duration="500"
                    app:rb_animation_progress_color="@color/colorAccent"
                    app:rb_animation_progress_style="dots"
                    app:rb_background_color="@color/colorAccent"
                    app:rb_background_color_pressed="#098970"
                    app:rb_corner_color="#fff"
                    app:rb_corner_color_pressed="#098970"
                    app:rb_corner_radius="50dp"
                    app:rb_corner_width="1dp"
                    app:rb_text_color="#fff"
                    app:rb_text_color_pressed="@android:color/white" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/leftarrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/leftarrow"/>
                    <TextView
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/rightarrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/rightarrow"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/checkMark"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/checkedicon"/>
        </FrameLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a0050505"
        android:orientation="horizontal" />
    <LinearLayout
        android:id="@+id/alert"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#fff"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:padding="8dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warning!"
            android:drawableLeft="@drawable/warningicon"
            android:drawablePadding="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:padding="3dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We will submit your answers.\nDo you agree?"
            android:gravity="center"
            android:textSize="14sp"
            android:background="#5ef2f2f2"
            android:textColor="#000"
            android:padding="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/no_button"
                android:layout_width="0px"
                android:layout_weight="1"
                android:visibility="visible"
                android:layout_height="wrap_content"
                android:textColor="#19d40a"
                android:background="#4319d40a"
                android:gravity="center"
                android:padding="5dp"
                android:text="No"/>
            <TextView
                android:id="@+id/yes_button"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:gravity="center"
                android:background="#19d40a"
                android:padding="5dp"
                android:text="Yes"/>
        </LinearLayout>
    </LinearLayout>
    <com.cunoraz.gifview.library.GifView
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        custom:gif="@drawable/loader"/>
</FrameLayout>