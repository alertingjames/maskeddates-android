<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_shadow"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/lyt_picture">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/root_view">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/guimin"
                    android:visibility="visible"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Zhang Guimin"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/colorAccent"/>
                <ImageView
                    android:id="@+id/noticon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/noti_small"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="monospace"
                android:text="notification"
                android:layout_margin="5dp"
                android:padding="2dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/datetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:text="06/08/2018"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#a4a4a4"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/past"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Past"
                    android:visibility="gone"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:background="@drawable/red_round"
                    android:padding="5dp"/>
                <ImageView
                    android:id="@+id/option"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/lovelock"
                    android:layout_gravity="right"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/status"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/onlineicon"
                    android:visibility="gone"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>