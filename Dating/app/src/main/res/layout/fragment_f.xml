<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:visibility="visible"
        android:background="@color/colorAccent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Drink of Choice Is"
            android:textSize="20sp"
            android:padding="6dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/first"
                android:layout_width="0px"
                android:layout_weight="1"
                android:background="@drawable/red_stroke_round"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/tea"/>
                    <TextView
                        android:id="@+id/firsttext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tea"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"/>
                    <ImageView
                        android:id="@+id/firstbutton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="visible"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/radioicon"
                        android:layout_gravity="right"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/second"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/red_stroke_round"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/coffee"/>
                    <TextView
                        android:id="@+id/secondtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Coffee"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"/>
                    <ImageView
                        android:id="@+id/secondbutton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="visible"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/radioicon"
                        android:layout_gravity="right"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/third"
                android:layout_width="0px"
                android:layout_weight="1"
                android:background="@drawable/red_stroke_round"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/harddrinks"/>
                    <TextView
                        android:id="@+id/thirdtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hard drinks"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"/>
                    <ImageView
                        android:id="@+id/thirdbutton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="visible"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/radioicon"
                        android:layout_gravity="right"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fourth"
                android:layout_width="0px"
                android:layout_weight="1"
                android:background="@drawable/red_stroke_round"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/softdinks"/>
                    <TextView
                        android:id="@+id/fourthtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Soft drinks"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"/>
                    <ImageView
                        android:id="@+id/fourthbutton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="visible"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/radioicon"
                        android:layout_gravity="right"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/fifth"
                android:layout_width="0px"
                android:layout_weight="1"
                android:background="@drawable/red_stroke_round"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/juicebox"/>
                    <TextView
                        android:id="@+id/fifthtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Juice Box"
                        android:background="#fff"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"/>
                    <ImageView
                        android:id="@+id/fifthbutton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="visible"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/radioicon"
                        android:layout_gravity="right"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sixth"
                android:layout_width="0px"
                android:layout_weight="1"
                android:background="@drawable/red_stroke_round"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:background="@drawable/tapwater"/>
                    <TextView
                        android:id="@+id/sixthtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tap Water"
                        android:background="#fff"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"/>
                    <ImageView
                        android:id="@+id/sixthbutton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="visible"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/radioicon"
                        android:layout_gravity="right"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>






























