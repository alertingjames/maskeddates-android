<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="#fff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorAccent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Favorite movie genre"
                    android:textSize="20sp"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gray_round">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        android:background="@drawable/qbackground2"/>
                </FrameLayout>
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp">
                    <RadioButton
                        android:id="@+id/first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Action"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Comedy"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/third"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Thriller"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/fourth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Horror"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/fifth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Romance"
                        android:gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/sixth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Science Fiction"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/seventh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Drama"
                        android:visibility="gone"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/eighth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Documentary"
                        android:visibility="gone"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                    <RadioButton
                        android:id="@+id/ninth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Romantic"
                        android:visibility="visible"
                        android:gravity="center"
                        android:background="@drawable/red_stroke_round"
                        android:button="@android:color/transparent"
                        android:drawableRight="@drawable/right_arrow_red"
                        android:textColor="@color/colorAccent"
                        android:padding="10dp"
                        android:textSize="14sp"/>
                </RadioGroup>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</FrameLayout>






























