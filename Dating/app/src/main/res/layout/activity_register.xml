<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/lyt_container">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/lyt_container_photo"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:contextClickable="true">
                <ImageView
                    android:id="@+id/backgroundImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/selfiebackground"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    android:background="#5c000000" />
            </FrameLayout>
            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0px"
                android:layout_height="0px" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal|bottom">
                <EditText
                    android:id="@+id/firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="First name"
                    android:singleLine="true"
                    android:maxWidth="180dp"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="center" />
                <EditText
                    android:id="@+id/lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Last name"
                    android:layout_marginLeft="20dp"
                    android:maxWidth="180dp"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/gendericon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/gender_red"/>
                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Male/Female"
                        android:textColorHint="#c88b8b8b"
                        android:textSize="18sp"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/age_red"/>
                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Age"
                        android:textColorHint="#c88b8b8b"
                        android:textSize="18sp"
                        android:paddingTop="8dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/picture"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:onClick="takePhoto"
                android:src="@drawable/photo_opacity"
                android:background="@drawable/circular_shadow"
                app:civ_border_width="2dp"
                app:civ_border_color="#ffffff"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/camera_red"
                android:layout_margin="10dp"
                android:layout_gravity="right|bottom"/>
        </FrameLayout>
        <com.marozzi.roundbutton.RoundButton
            android:id="@+id/proceedButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="30dp"
            android:onClick="next"
            android:gravity="center"
            android:background="@drawable/circular_shadow"
            android:text="Next"
            android:layout_gravity="center_horizontal|bottom"
            app:rb_animation_alpha="true"
            app:rb_animation_duration="500"
            app:rb_animation_progress_color="@color/colorAccent"
            app:rb_animation_progress_style="dots"
            app:rb_background_color="@color/colorAccent"
            app:rb_background_color_pressed="#098970"
            app:rb_corner_color="#fff"
            app:rb_corner_color_pressed="#098970"
            app:rb_corner_radius="50dp"
            app:rb_corner_width="1dp"
            app:rb_text_color="#fff"
            app:rb_text_color_pressed="@android:color/white" />
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please upload your selfie"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_weight="1" />
        <com.cunoraz.gifview.library.GifView
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            custom:gif="@drawable/loader"/>
        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/age_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:visibility="gone"
            android:layout_gravity="right|bottom"/>
    </FrameLayout>
</LinearLayout>







