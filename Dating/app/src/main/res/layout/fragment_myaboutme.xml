<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:layout_marginBottom="15dp">
            <TextView
                android:id="@+id/aboutmetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About me"
                android:visibility="gone"
                android:textColor="@color/colorAccent"
                android:fontFamily="monospace"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:id="@+id/dynamical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
            <TextView
                android:id="@+id/quickpeektitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About me"
                android:visibility="visible"
                android:textColor="@color/colorAccent"
                android:fontFamily="monospace"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/iamtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am"
                android:textColor="#000"
                android:visibility="visible"
                android:fontFamily="monospace"
                android:textSize="18sp"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"/>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/iamlayout"
                app:flexWrap="wrap"
                app:alignItems="stretch"
                app:alignContent="stretch"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            </com.google.android.flexbox.FlexboxLayout>
            <TextView
                android:id="@+id/iliketitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I like"
                android:visibility="visible"
                android:fontFamily="monospace"
                android:textSize="18sp"
                android:textColor="#000"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"/>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/ilikelayout"
                app:flexWrap="wrap"
                app:alignItems="stretch"
                app:alignContent="stretch"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            </com.google.android.flexbox.FlexboxLayout>
            <TextView
                android:id="@+id/iamheretitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am here for"
                android:visibility="visible"
                android:fontFamily="monospace"
                android:textSize="18sp"
                android:textColor="#000"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"/>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/iamherelayout"
                app:flexWrap="wrap"
                app:alignItems="stretch"
                app:alignContent="stretch"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            </com.google.android.flexbox.FlexboxLayout>
            <TextView
                android:id="@+id/ititle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I "
                android:textColor="#000"
                android:visibility="visible"
                android:fontFamily="monospace"
                android:textSize="18sp"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"/>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/ilayout"
                app:flexWrap="wrap"
                app:alignItems="stretch"
                app:alignContent="stretch"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            </com.google.android.flexbox.FlexboxLayout>
            <LinearLayout
                android:id="@+id/staticq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>























